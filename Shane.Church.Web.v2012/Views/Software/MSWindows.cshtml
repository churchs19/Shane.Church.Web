<div class="panes">
	<div class="pane tab-1" id="tab-1">
		<h2><a href="@Url.Action("MSWindows", "Software", new { id = 1 })">Basecamp People Sync</a></h2>
		<h3><a href="@Url.Content("~/software/windows/basecampsync/BasecampPeopleSync.zip")">Download</a></h3>
		<img class="imagefloat" src="@Url.Content("~/software/windows/basecampsync/BasecampSync.png")" alt="Basecamp People Sync" />
