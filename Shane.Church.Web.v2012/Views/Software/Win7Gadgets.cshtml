@model Shane.Church.Web.v2012.Models.Software.SoftwareViewModel
@{
	ViewBag.Title = "Shane Church - Windows 7 Gadgets";
	ViewBag.Header = "Windows 7 Gadgets";
	ViewBag.ShortHeader = "Win 7 Gadgets";
}

<div class="software-nav">
	<ul class="tabs">
		<li class="first last">
			<a id="post-tab-1" href="#tab-1" >Stirling Weather</a>
		</li>
	</ul>
</div>
<div class="panes">
	<div class="pane tab-1" id="tab-1">
		<h2><a href="@Url.Action("Win7Gadgets", "Software", new { id = 1 })">Stirling Weather</a></h2>
		<h3><a href="@Url.Content("~/software/gadgets/stirlingweather/StirlingWeather.gadget")">Download</a></h3>
		<img class="imagefloat" src="@Url.Content("~/software/gadgets/stirlingweather/Stirling-Weather.png")" alt="Stirling Weather Screenshot"/>
		<p>Stirling Weather displays the current weather conditions, extended forecast, current watches and warnings, and current radar from the National Weather Service on your Windows 7 desktop.  This gadget supports all locations covered by the United States National Weather Service.</p>
		<img class="imagefloatleft" src="@Url.Content("~/software/gadgets/stirlingweather/Stirling-Weather-Extended.png")" alt="Stirling Weather Extended Forecast Screenshot"/>
		<img class="imagefloatleft" src="@Url.Content("~/software/gadgets/stirlingweather/Stirling-Weather-Warnings.png")" alt="Stirling Weather Current Watches and Warnings Screenshot"/>
		<img class="imagefloatleft" src="@Url.Content("~/software/gadgets/stirlingweather/Stirling-Weather-Radar.png")" alt="Stirling Weather Radar Screenshot"/>
		<div class="clear">&nbsp;</div>
	</div>
</div>
@section PostFooter {
	<script src="@Url.Content("~/Scripts/jquery.tools.min.js")" type="text/javascript"></script>
	<script type="text/javascript">
		$(document).ready(function () {
			$().Navigation("initTabs", {
				selectedIndex: @Model.Id
			});
		});
	</script>
}